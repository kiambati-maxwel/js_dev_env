{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "scripts": {
    "prestart": "babel-node buildScript/start_message.js",
    "start": "npm-run-all --parallel open:src lint:watch watch:test start-mockapi",
    "app": " nodemon --exec npm run start",
    "share": "npm-run-all --parallel ngrok open:src",
    "open:src": "babel-node buildScript/srcServer.js",
    "lint": "esw webpack.config.* src buildScript --color",
    "lint:watch": "npm run lint -- --watch",
    "ngrok": "ngrok http 8000",
    "test": "mocha --reporter progress buildScript/testSetup.js \"src/**/*.test.js\"",
    "watch:test": "npm run test -- --watch",
    "generate-mock-data": "babel-node buildScript/generateMockData.js",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node buildScript/build.js",
    "postbuild": "babel-node buildScript/distServer.js",
    "deploy": "surge ./dist"
  },
  "author": "Cory House",
  "license": "MIT",
  "dependencies": {
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-loader": "6.2.5",
    "babel-preset-latest": "6.16.0",
    "babel-register": "6.16.3",
    "chai": "3.5.0",
    "chalk": "^4.1.0",
    "cheerio": "0.22.0",
    "compression": "^1.7.4",
    "cross-env": "3.1.3",
    "css-loader": "^3.6.0",
    "eslint": "3.8.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-watch": "2.1.14",
    "express": "^4.17.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "faker": "^4.1.0",
    "html-webpack-plugin": "2.22.0",
    "jsdom": "9.8.0",
    "json-loader": "^0.5.7",
    "json-schema-faker": "^0.5.0-rcv.24",
    "json-server": "^0.16.1",
    "localtunnel": "1.8.1",
    "mocha": "3.1.2",
    "nock": "8.1.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "3.1.1",
    "nsp": "2.6.2",
    "numeral": "1.5.3",
    "open": "0.0.5",
    "rimraf": "2.5.4",
    "style-loader": "0.13.1",
    "surge": "0.20.4",
    "webpack": "1.13.2",
    "webpack-dev-middleware": "1.8.4",
    "webpack-hot-middleware": "2.13.0",
    "webpack-md5-hash": "0.0.5"
  }
}
